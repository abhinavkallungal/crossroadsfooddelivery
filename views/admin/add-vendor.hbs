<div class="container-fluid px-lg-4">
    <div class="row">
        <div class="container-fluid px-lg-4">
            <div class="row">
                <div class="col-md-12 mt-lg-4 mt-4">
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">VENDOR MANAGEMENT</h1>

                    </div>
                </div>


            </div>
        </div>

    </div>



    <div class="row d-flex justify-content-center">
        <section class=" card col-md-10 m-l-auto m-r-auto">
            <h2 class="text-center p-2 m-2">Add Vendor</h2>
            <div class="container mt-4">
                <div class="row d-flex justify-content-center mb-4">
                    <div class="col-md-9 ">


                        <form action="/admin/add-vendor" method="POST" enctype="multipart/form-data">
                            <label for="">Name</label>
                            <input type="text" name="Name" class="form-control" required>

                            {{#if nameErr}}
                            <p class="error  text-danger"> <i class="fa fa-exclamation-circle"> </i> email address is
                                already in use </p>
                            {{/if}}

                            <label for="">Password</label>
                            <input type="password" name="Password" class="form-control" required>

                            <label for="">Place</label>
                            <input type="text" name="Place" class="form-control" required>

                            <label for="">Phone Number</label>
                            <input type="text" name="PhoneNumber" class="form-control" required>

                            <label for="">Email Id</label>
                            <input type="text" name="EmailId" class="form-control" required>

                            {{!-- <label for="">logo</label>
                        <input type="file" name="logo" class="form-control"> --}}

                            <button type="submit" class="btn btn-success mt-4">Submit</button>
                            <a href="/admin/view-vendors" class="btn btn-warning mt-4">Cancel</a>



                    </div>
                </div>
            </div>
        </section>
    </div>
</div>