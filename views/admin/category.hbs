<style>
    @import url("/stylesheets/admin.css");

  .navbar-nav>li>a.categorymanagement {
    color: #e9ecef !important;
    background: linear-gradient(90deg,
            rgba(59, 125, 221, 0.1),
            rgba(59, 125, 221, 0.0875) 50%,
            transparent);
    border-left: 4px solid #3b7ddd;
}
</style>

<div class="container-fluid px-lg-4">
    <div class="row">
        <div class="container-fluid px-lg-4">
            <div class="row">
                <div class="col-md-12 mt-lg-4 mt-4">
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">CAREGORY MANAGEMENT</h1>
                        
                    </div>
                </div>


            </div>
        </div>

    </div>



<div class="row d-flex justify-content-center">
    <section class=" card col-md-10 m-l-auto m-r-auto">
         <h2 class="text-center p-2 m-2">Add Category</h2>
         <hr>
        <div class="container mt-4">
        
            <div class="row d-flex justify-content-center mb-4">
            
                <div class="col-md-6 ">

                   
                    <form action="/admin/add-category" method="POST" enctype="multipart/form-data">
                        <label for="">Category</label>
                        <input type="text" name="Category" class="form-control" required>

                        <label for="">Commission</label>
                        <input type="number" name="Commission" class="form-control" required>


                        <button type="submit" class="btn btn-success mt-4">Submit</button>
                    </form>


                </div>
            </div>
        </div>
    </section>
    <section class=" card col-md-10 m-l-auto m-r-auto">
         <h2 class="text-center p-2 m-2">Category</h2>
         <hr>
        <div class="container ">
        
            <div class="row d-flex justify-content-center mb-4">
            
                <div class="col-md-9 ">

                   <div class="table-responsive ">
                    <table class="table v-middle">
                        <thead>
                            <tr class="bg-light">
                                <th class="border-top-0">Category</th>
                                <th class="border-top-0">Commission</th>
                                 <th class="border-top-0">Edit</th>
                                  <th class="border-top-0">delete</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            {{#each categorys}}
                            <tr>
                                
                                <td><h4 class="m-b-0 font-16">{{this.Category}}</h4></td>
                                <td><h4 class="m-b-0 font-16">{{this.Commission}}</h4></td>
                                
                                <td>
                                    <a href="/admin/edit-category/{{this._id}}" class=" btn btn-success">edit</a>
                                   
                                </td>
                                 <td>
                                    
                                    <a href="/admin/delete-category/{{this._id}}" class=" btn btn-danger">delete</a>
                                </td>
                            </tr>
                            {{/each}}
                            
                           
                        </tbody>
                    </table>
                </div>
                    


                </div>
            </div>
        </div>
    </section>
</div>
</div>

<script>
      $("#bar").click(function () {
            $(this).toggleClass("open");
            $("#page-content-wrapper ,#sidebar-wrapper").toggleClass("toggled");
        });
        //
         function toggleMenu() {
        let navigation = document.querySelector(".navigation");
        let toggle = document.querySelector(".toggle");

        navigation.classList.toggle("active");
        toggle.classList.toggle("active");
       }
</script>