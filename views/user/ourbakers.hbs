<style>
    @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800&display=swap");


    /* our bakers */
    .marketing .col-lg-4 {
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .marketing h2 {
        font-weight: 400;
    }


    .marketing .col-lg-4 p {
        margin-right: .75rem;
        margin-left: .75rem;
    }

    .img{
        border: #d50000 1px solid;
    }
    .card{
        box-shadow: 2px 2px 1px rgba(50, 50, 50, 0.75);
    }
    .nav__item > .ourbakers{
     color: var(--first-color);
}
</style>



<main>
    <section class="my-5 ">
        <hr class="featurette-divider">
        <div class="container marketing">

            <!-- Three columns of text below the carousel -->
            <h1 class="text-center mb-5">Our Bakers</h1><br>
            <div class="row">

                {{#each vendors}}
                <div class="card mx-auto text-center mb-5" style="width: 18rem;">
                     <a href="/viewproducts/{{this._id}}" class="btn"><img class="rounded-circle img " width="140"
                            height="140" alt="100x100" src="/vendor-logo/{{this._id}}.jpg"
                            data-holder-rendered="true"></a>

                    <h2>{{this.Name}}</h2>
                    <p>{{this.Place}}</p>
                    <p><a class="btn btn-secondary" href="/viewproducts/{{this._id}}" role="button">VIEW PRODUCTS </a>
                </div>
               {{/each}}

        </div><!-- /.row -->


        <!-- START THE FEATURETTES -->

        <hr class="featurette-divider">


    </section>
</main>

