<style>
    body {
        height: 100vh;
    }

    .container {
        margin-top: 110px;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #d50000
    }

    .profile-button {
        background: #d50000;
        box-shadow: none;
        border: none
    }

    .profile-button:hover {
        background: #d50000
    }

    a {
        text-decoration: none;
        color: #d50000;
    }



    .profile-button:focus {
        background: #d50000;
        box-shadow: none
    }

    .profile-button:active {
        background: #d50000;
        box-shadow: none
    }

    .back:hover {
        color: #d50000;
        cursor: pointer
    }

    .text {
        border: 1px #dbdadb solid;
        height: 30px;
        padding: 5px;
        border-radius: 5px;
    }
</style>

<div class="container rounded bg-white ">
    <div class="row">
        <div class="col-md-6 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5"
                    src="/images/profile.jpg" width="100"><span class="font-weight-bold">{{user.fname}}</span><span
                    class="text-black-50">{{user.Email}}</span></div>
        </div>
        <div class="col-md-6">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <a href="/">
                        <div class="d-flex flex-row align-items-center back"><i
                                class="fa fa-long-arrow-left mr-1 mb-1"></i>
                            <h6>Back to home</h6>
                        </div>
                    </a>

                    <a href="/profile">
                        <h6 class="text-right">Back to profile</h6>
                    </a>
                </div>
                <form class="" action="/resetpassword/{{userId}}" method="POST" id="passwordform">
                    <div class=" row">
                        <div class="form-group col-md-12">
                            <label for="">CURRENT PASSWORD</label>
                            <input type="password" class="form-control form-control-user" name="oldPassword" id="oldPassword"
                                 placeholder="Enter your current password" />
                            {{#if passwordErr}}
                            <p class="error  text-danger"> <i class="fa fa-exclamation-circle"> </i> incorrect password </p>
                            {{/if}}
                        </div>
                        <div class="form-group col-md-12">
                            <label for="">NEW PASSWORD</label>
                            <input type="password" class="form-control form-control-user" id="password"
                                placeholder="Enter password" name="Password" />
                        </div>
                        <div class="form-group col-md-12">
                            <label for="">CONFIRM PASSWORD</label>
                            <input type="password" class="form-control form-control-user" id="cPassword"
                                placeholder="Enter password" name="PasswordAgain" />
                        </div>
                        
                    </div>
                    <div class="mt-1 text-right"><button class="btn btn-primary profile-button" type="submit">Save
                            Profile</button></div>
                </form>>
        </div>
    </div>
</div>



<script>

    $(document).ready(function () {
        $("#passwordform").validate({
            rules: {
                Password: {
					required: true,
					minlength: 5
				},
				PasswordAgain: {
					required: true,
					
				},
            }
        })
    })





</script>