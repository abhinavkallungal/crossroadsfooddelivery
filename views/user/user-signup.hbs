<style>
	.form-group {
		margin-bottom: 1px;
	}
</style>



<!-- Outer Row -->
<div class="row justify-content-center">

	<div class="col-xl-10 col-lg-12 col-md-9">

		<div class="card o-hidden border-0 shadow-lg my-5">
			<div class="card-body p-0">
				<!-- Nested Row within Card Body -->
				<div class="container">


					<div class="row">
						<div class="col-lg-6 d-none d-lg-block bg-login-image  ">
							<img src="/images/download.jpg" class="img-fluid" alt="Responsive image"
								style="width: 100%; height: 100%;">
							<h1></h1>
						</div>
						<div class="col-lg-6">
							<div class="p-5">
								<div class="text-center">
									<h1 class="h4 text-gray-900 mb-4">SIGN-UP</h1>
								</div>
								<form class="" action="/signup" method="POST" id="signupform">
									
									<div class="form-group">
										<label for="">EMAIL</label>
										<input type="email" class="form-control form-control-user" name="Email"
											id="email" aria-describedby="emailHelp" onchange="emailvalidation()"
											placeholder="Enter Email Address..." />
									</div>
									{{#if emailErr}}
										<p class="error  text-danger"> <i class="fa fa-exclamation-circle">  </i> email address is already in use </p>
									{{/if}}

									<div class="form-group">
										<label for="">mobile no</label>
										<input type="tel" class="form-control form-control-user" id="mobileno"
											name="mobileno" pattern="[0-9]{10}" placeholder="Enter mobile no..." />
									</div>

									<div class="form-group">
										<label for="">PASSWORD</label>
										<input type="password" class="form-control form-control-user" id="password"
											placeholder="Enter password" name="password" />
									</div>
									<div class="form-group">
										<label for="">2 PASSWORD</label>
										<input type="password" class="form-control form-control-user" id="cPassword"
											placeholder="Enter password" name="password_again" />
									</div>

									<div class="form-group">
										<div class="custom-control custom-checkbox small">
											<input type="checkbox" class="custom-control-input" id="customCheck" />
											<label class="custom-control-label" for="customCheck">Remember Me</label>
										</div>
									</div>
									<button type="submit" class="btn btn-primary btn-user btn-block">
										SIGN-UP
									</button>
								</form>
								<hr>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

	</div>

</div>


<script>

	$(document).ready(function () {
		$("#signupform").validate({
			rules: {
				Email: {
					required: true,
					email: true,
					minlength: 5

				},
				uname: {
					required: true,
					minlength: 5,
					number: false
				},
				mobileno: {
					required: true,
					minlength: 10,
					maxlength: 13
				},
				password: {
					required: true,
					minlength: 5
				},
				password_again: {
					required: true,
					equalTo: "#password"
				},

			}
		})
	})





</script>