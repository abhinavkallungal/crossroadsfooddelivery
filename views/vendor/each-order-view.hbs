}

.bbb_adv_text {
    color: #828282;
    margin-top: 10px;
    font-size: 14px
}

.bbb_adv_image {
    width: 178px;
    height: 100%
}

.bbb_adv_image img {
    display: block;
    max-width: 100%
}
