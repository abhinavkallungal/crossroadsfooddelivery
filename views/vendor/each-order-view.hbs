<main>
    <section>
        <div class="container mt-5">
            <div class="card">
                <div class="row">
                    <div class="col-md-4 summary">
                        <div>
                            <h5><b>Summary</b></h5>
                        </div>
                        <hr>
                        <div class="col" style="padding-left:0;">ORDER ID:{{order._id}}</div>
                        <div class="col" style="padding-left:0;">PAYMENT:RS:{{order.products.totalPrice}}
                            ({{order.paymentMethod}} )</div>
                        <form id="update-form">
                            <label for="sel1">Order Status</label>
                            <select class="form-control" name="status" id="sel1">
                                <option value="{{order.products.status}}">{{order.products.status}}</option>
                                <option value="Accept">Accept</option>
                                <option value="Dispatched">Dispatched</option>
                                <option value="Delivered">Delivered</option>
                            </select>
                            <input type="text" name="orderId" id="" value="{{order._id}}" hidden>
                            <button class="w-100 btn btn-primary btn-lg" type="submit">UPDATE STATUS</button>
                        </form>
                        <div class="needs-validation">
                            <div class="row g-3">
                                <h4 class="mb-3">Billing address</h4>
                                <div class="col-sm-12">
                                    <label for="lastName" class="form-label">Name</label>
                                    <p class=" test">{{order.deliveryDetails.FirstName}}
                                        {{order.deliveryDetails.LastName}}</p>
                                </div>
                                <div class="col-sm-12">
                                    <label for="firstName" class="form-label">Email</label>
                                    <p class=" test">{{order.deliveryDetails.Email}}</p>
                                </div>

                                <div class="col-sm-12">
                                    <label for="lastName" class="form-label">Address</label>
                                    <p class=" test">
                                        {{order.deliveryDetails.Address}},{{order.deliveryDetails.Address2}},{{order.deliveryDetails.Zip}},
                                    </p>
                                </div>
                                <div class="col-sm-12">
                                    <label for="firstName" class="form-label">Mobile No</label>
                                    <p class=" test">{{order.deliveryDetails.Mobile}},</p>
                                </div>

                            </div>


                        </div>

                    </div>
                    <div class="col-md-8 cart">
                        <div class="col-md-7 col-lg-12">
                            <div class="row">
                                <div class="bbb_advs">
                                <div class="container">
                                    <div class="row">
                                        {{#each Orderproducts}}
                                        <div class="col-lg-6 bbb_adv_col">
                                            <!-- bbb_adv Item -->
                                            <div
                                                class="bbb_adv d-flex flex-row align-items-center justify-content-start">
                                                <div class="bbb_adv_content">
                                                    <div class="bbb_adv_title">{{this.product.Name}}</div>
                                                    <div class="bbb_adv_text">Quantity:{{this.quantity}}</div>
                                                </div>
                                                <div class="ml-auto">
                                                    <div class="bbb_adv_image"><img
                                                            src="/product-images/{{this.item}}.jpg"
                                                            alt=""></div>
                                                </div>
                                            </div>
                                        </div>
                                        {{/each}}
                                       
                                        
                                    </div>
                                </div>
                            </div>
                            
                            </div>
                            

                        </div>
                    </div>

                </div>
            </div>

        </div>
    </section>
</main>



