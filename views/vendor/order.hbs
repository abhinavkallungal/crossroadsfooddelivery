<style>
  .Delivered{
    border: 1px solid chartreuse;
    text-align: center;
    background: chartreuse;
    border-radius: 10px;
    
  }
  .placed{
    border: 1px solid #007bff;
    text-align: center;
    background: #007bff;
    border-radius: 10px;
  }
  .Accept{
     border: 1px solid #6f42c1;
    text-align: center;
    background: #6f42c1;
    border-radius: 10px;
  }
  .Dispatched{
    border: 1px solid gold;
    text-align: center;
    background: gold;
    border-radius: 10px;
  }
</style>

<!-- column -->
<div class="col-md-12 mt-4">
  <div class="card">
    <div class="card-body">
      <!-- title -->
      <div class="d-md-flex align-items-center">
        <div>
          <h4 class="card-title">ORDERS</h4>
          <h5 class="card-subtitle">
            Overview of Top Selling Items
          </h5>
        </div>
        <div class="ml-auto">
          <div class="dl">
            <select class="custom-select">
              <option value="0" selected="">Monthly</option>
              <option value="1">Daily</option>
              <option value="2">Weekly</option>
              <option value="3">Yearly</option>
            </select>
          </div>
        </div>
      </div>
      <!-- title -->
    </div>
    <div class="table-responsive">
      <table class="table v-middle">
        <thead>
          <tr class="bg-light">
            <th class="border-top-0">DATE</th>
            <th class="border-top-0">ORDER ID</th>
            <th class="border-top-0">STATUS</th>
            <th class="border-top-0">PAYMENT METHO</th>
            <th class="border-top-0">PRICE</th>  
            <th class="border-top-0">VIEW</th>
            
          </tr>
        </thead>
        <tbody>
          {{#each orders}}
          <tr>
            <td>{{this.date}}</td>
            <td>
              <div class="d-flex align-items-center">
                <div class="">
                  <h4 class="m-b-0 font-16">{{this._id}}</h4>
                </div>
              </div>
            </td>
            <td><p class="{{this.products.status}}">{{this.products.status}}</p></td>
            <td>{{this.paymentMethod}}</td>
            <td>
              <label class="label label-danger">{{this.products.totalPrice}}</label>
            </td>
            <td>
              <a href="/vendor/vieworder/{{this._id}}" class=" btn btn-success">view</a>
            </td>
          </tr>
          {{/each}}

        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="col-md-12">
  <div class="row">
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-4">SALES REPORT</h5>
          <div class="salesreport">
            <canvas id="myChart1"></canvas>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-4">SALES</h5>
          <div class="salesreport">
            <canvas id="myChart2"></canvas>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
</div>
</div>

