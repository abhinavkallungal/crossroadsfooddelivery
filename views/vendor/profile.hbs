  }

    body {
    height: 100vh;
}
.container{
    margin-top: 70px;
}

.form-control:focus {
    box-shadow: none;
    border-color: #d50000
}

.profile-button {
    background: #d50000;
    box-shadow: none;
    border: none
}

.profile-button:hover {
    background:#d50000
}
a{
    text-decoration: none;
    color:  #d50000;
}
a:hover{
  text-decoration: none;
    color:  #d50000;  
}



.profile-button:focus {
    background: #d50000;
    box-shadow: none
}

.profile-button:active {
    background: #d50000;
    box-shadow: none
}

.back:hover {
    color: #d50000;
